{
  "name": "@kleros/archon",
  "version": "2.2.0",
  "description": "A javascript library for Ethereum dispute resolution. Provides the ability to interface with Arbitrable and Arbitrator Ethereum smart contracts, as defined in ERC 792.",
  "license": "MIT",
  "keywords": [
    "Blockchain",
    "Ethereum",
    "Arbitration",
    "Arbitrable",
    "Arbitrator",
    "ERC 792",
    "Evidence",
    "MetaEvidence"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src -d dist",
    "docs": "esdoc",
    "ganache": "ganache-cli",
    "prepublishOnly": "run-s build",
    "preversion": "run-s test",
    "release": "standard-version",
    "test": "jest --config ./jest.config.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "axios": "^0.21.0",
    "iframe": "^1.0.0",
    "js-sha3": "^0.8.0",
    "multihashes": "0.4.14",
    "v8-sandbox": "^2.2.2"
  },
  "peerDependencies": {
    "web3": "^1.3.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "assert": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "cross-env": "^7.0.3",
    "electron": "^15.5.5",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "ganache-cli": "^6.12.1",
    "ganache-core": "^2.13.2",
    "husky": ">=6",
    "jest": "^26.6.1",
    "jest-cli": "^26.6.1",
    "lint-staged": ">=10",
    "nock": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "os-browserify": "^0.3.0",
    "prettier": "2.2.1",
    "prettier-config-standard": "^4.0.0",
    "solc": "0.4.25",
    "standard-version": "^9.0.0",
    "url": "^0.11.0",
    "util": "^0.12.3"
  },
  "volta": {
    "node": "14.17.3"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
